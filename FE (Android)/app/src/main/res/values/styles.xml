<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/p_main_first</item>
        <item name="colorPrimaryDark">@color/p_main_first</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/blue_grey_600</item>
        <item name="android:dialogTheme">@style/Dialog.Theme</item>
        <item name="android:itemBackground">@color/p_white_10</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/grey_200</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/grey_400</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button.Primary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Accent" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Green" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/light_green_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.White" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="Button.Primary.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button.Accent.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Button.Accent.Borderless.WhiteText" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.White.Primary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button.White.TextDark" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Button.White.Accent" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProoyaDatePickerTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/dp_background</item>
    </style>

    <!--Theme for date picker dialog-->
    <style name="DatePickerThemeLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--Theme for time picker dialog-->
    <style name="TimePickerThemeLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Yellow.Small.AppCompatRatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/grey_700</item>
        <item name="colorControlActivated">@color/yellow_600</item>
    </style>

    <style name="Yellow.Small.AppCompatRatingBar.White" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/grey_300</item>
        <item name="colorControlActivated">@color/yellow_600</item>
    </style>

    <style name="Yellow.Very.Small.AppCompatRatingBar" parent="@style/Yellow.Small.AppCompatRatingBar">
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <style name="Yellow.AppCompatRatingBar" parent="Base.Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/grey_700</item>
        <item name="colorControlActivated">@color/yellow_600</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/grey_300</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Subhead.Bold" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="TextAppearance.Medium.Bold" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Drawer.Custom.Dark" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">#26000000</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
    </style>

    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_700</item>
        <item name="android:textColorPrimary">@color/grey_700</item>
    </style>

    <!-- Base application theme. -->
    <style name="EditText.Yellow" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_200</item>
        <item name="colorControlActivated">@color/amber_500</item>
        <item name="colorControlHighlight">@color/amber_500</item>
    </style>

    <style name="EditText.White" parent="@style/AppTheme">
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@color/grey_300</item>
    </style>

    <style name="EditText.White.Hint" parent="@style/EditText.White">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/grey_300</item>
    </style>

    <style name="EditText.Grey" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/grey_700</item>
        <item name="colorControlHighlight">@color/grey_700</item>
        <item name="colorControlNormal">@color/grey_500</item>
    </style>

    <style name="EditText.GreySoft" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/grey_500</item>
        <item name="colorControlHighlight">@color/grey_500</item>
        <item name="colorControlNormal">@color/grey_300</item>
    </style>

    <style name="EditText.Grey.Hint" parent="@style/EditText.Grey">
        <item name="colorAccent">@color/grey_700</item>
    </style>

    <style name="EditText.Green" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/green_500</item>
        <item name="colorControlHighlight">@color/green_500</item>
        <item name="colorControlNormal">@color/green_400</item>
    </style>

    <style name="EditText.Flat.Grey" parent="@style/AppTheme">
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/blue_grey_900</item>
    </style>

    <style name="EditText.Flat.Grey.Small" parent="@style/AppTheme">
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/blue_grey_900</item>
    </style>

    <style name="CustomTabBottomSheet" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="ProgressBar.White" parent="@style/AppTheme">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="Checkbox.Blue" parent="@style/AppTheme">
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorAccent">@color/blue_600</item>
        <item name="colorControlActivated">@color/blue_600</item>
        <item name="colorControlHighlight">@color/blue_600</item>
        <item name="colorControlNormal">@color/grey_500</item>
    </style>

    <style name="AppTheme.Dialog.NoActionBar" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Setting.Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/p_main_first</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="SettingLabelSubject">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_grey_900</item>
    </style>

    <style name="SettingLabelDesc">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="SettingLabelAppDesc">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="TeamSelectLabelDesc">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="LicenseSubject">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue_grey_900</item>
    </style>

    <style name="LicenseContent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <!-- Bottom Sheet(YearSelection) -->
    <style name="BottomSheetYearSelection" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_season_select_rounded</item>
    </style>

    <style name="YearSelectionRoundStyle" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetYearSelection</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Bottom Sheet(Team Detail) -->
    <style name="BottomSheetTeamDetail" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_team_detail_rounded</item>
    </style>

    <style name="TeamDetailRoundStyle" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetTeamDetail</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="RippleStyleDark" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#80000000</item>
    </style>

    <!-- Team Score Text Style-->
    <style name="TeamScoreStyle">
        <item name="android:textSize">@dimen/md_18</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="TeamScoreStyleRecentList">
        <item name="android:textSize">@dimen/md_18</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="GameListAdditionalDetails">
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <!-- Team Score Win Team-->
    <style name="TeamScoreWinTeam">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/red_85</item>
    </style>

    <!-- Team Score Lose Team-->
    <style name="TeamScoreLoseTeam">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <!-- Statics Card Base Text-->
    <style name="StaticsBaseText">
        <item name="android:textColor">@color/p_white_10</item>
    </style>

    <!-- Statics Card Base Text :: TOP-->
    <style name="StaticsBaseTextTop" parent="StaticsBaseText">
        <item name="android:textSize">@dimen/md_30</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Statics Card Base Text :: MID-->
    <style name="StaticsBaseTextMid" parent="StaticsBaseText">
        <item name="android:textSize">@dimen/md_14</item>
    </style>

    <!-- Statics Card Base Text :: Bot-->
    <style name="StaticsBaseTextBot" parent="StaticsBaseText">
        <item name="android:textSize">@dimen/md_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Page Title -->
    <style name="PageTitle">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/md_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TeamRecordTeamName -->
    <style name="TeamRecordSummaryTeamName">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/md_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TeamRecordSummary -->
    <style name="TeamRecordSummaryTeamSummary">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/md_18</item>
    </style>

    <!-- TeamRecordListLabel -->
    <style name="TeamRecordSummaryListLabel">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/md_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TeamRecordListItemTeamName -->
    <style name="TeamRecordListItemTeamName">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/md_18</item>
    </style>

    <!-- TeamRecordListItemCount -->
    <style name="TeamRecordListItemCount">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/md_18</item>
    </style>

    <!-- SeasonSelectionBottom Title -->
    <style name="SeasonSelectionTitle">
        <item name="android:textColor">@color/p_white_10</item>
        <item name="android:textSize">@dimen/md_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- SeasonSelectionBottom Title -->
    <style name="SeasonSelectionButton">
        <item name="android:textColor">@color/p_white_10</item>
        <item name="android:textSize">@dimen/md_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TeamDetailBottom Title -->
    <style name="TeamDetailTitle">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/md_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TeamDetailBottom Title -->
    <style name="GameResultLabel">
        <item name="android:textColor">@color/p_white_10</item>
        <item name="android:textSize">@dimen/md_12</item>
    </style>

    <!-- Season Change Button Label -->
    <style name="SeasonChangeLabel">
        <item name="android:textColor">@color/p_white_10</item>
        <item name="android:textSize">@dimen/md_18</item>
    </style>

    <!-- 오늘경기 팀 레이블 -->
    <style name="TodayGameLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/p_white_10</item>
        <item name="android:textSize">@dimen/md_24</item>
    </style>

    <!-- 오늘경기 팀 상세정보 레이블 -->
    <style name="TodayGameDetailLabel">
        <item name="android:textColor">@color/p_white_10</item>
        <item name="android:textSize">@dimen/md_14</item>
    </style>

    <!-- 오늘경기 팀 진행정보 레이블 -->
    <style name="TodayGameStatusLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/p_white_10</item>
        <item name="android:textSize">@dimen/md_18</item>
    </style>

    <!-- 통계페이지 기록 제목 레이블 -->
    <style name="StaticRecordTitle">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/md_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 통계페이지 기록 데이터 레이블 -->
    <style name="StaticRecordData">
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textSize">@dimen/md_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 캘린더 RangePicker-->
    <style name="RangePickerCell">
        <item name="android:layout_width">@dimen/md_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- 캘린더 RangePicker (월)-->
    <style name="RangePickerCell.Month">
        <item name="android:textSize">@dimen/md_20</item>
        <item name="android:paddingStart">@dimen/md_34</item>
        <item name="android:textColor">@color/p_main_first</item>
    </style>

    <!-- 캘린더 RangePicker (주)-->
    <style name="RangePickerCell.Week" parent="RangePickerCell">
        <item name="android:textSize">@dimen/md_12</item>
        <item name="android:textColor">@color/p_main_first</item>
    </style>

    <!-- 캘린더 RangePicker (일)-->
    <style name="RangePickerCell.Day">
        <item name="android:layout_width">@dimen/md_36</item>
        <item name="android:layout_height">@dimen/md_36</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/md_14</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/p_main_first</item>
    </style>

    <!-- 캘린더 RangePicker Header 스타일-->
    <style name="RangePickerDate">
        <item name="android:textColor">@color/p_white_10</item>
    </style>

    <!-- 캘린더 RangePicker Header 스타일 > 레이블-->
    <style name="RangePickerDate.Label">
        <item name="android:textSize">@dimen/md_12</item>
    </style>

    <!-- 캘린더 RangePicker Header 스타일 > 날짜-->
    <style name="RangePickerDate.Date">
        <item name="android:textSize">@dimen/md_24</item>
    </style>

    <!-- 팀통산승률 Percentage-->
    <style name="TeamPercentage">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/md_18</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <!-- 상단 앱이름-->
    <style name="AppNameToolBar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/md_18</item>
        <item name="android:textColor">@color/p_white_10</item>
    </style>
</resources>
