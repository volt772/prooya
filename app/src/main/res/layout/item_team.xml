<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_team_root"
        style="@style/RippleStyleBlack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_60"
        android:background="@android:color/white"
        android:focusable="false"
        android:descendantFocusability="blocksDescendants">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_team_emblem"
            android:layout_width="@dimen/md_45"
            android:layout_height="@dimen/md_45"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_info_type_c"
            android:layout_marginStart="@dimen/md_16"
            app:civ_border="false"
            app:civ_shadow="true"
            app:civ_shadow_radius="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_team_name"
            android:layout_width="@dimen/md_0"
            android:layout_height="wrap_content"
            android:textAppearance="@style/SettingLabelAppDesc"
            android:textColor="@color/blue_grey_800"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/md_12"
            android:layout_marginEnd="@dimen/md_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_team_emblem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>